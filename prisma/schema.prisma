generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/mydb?schema=public"
}

model Guild {
  id String @id @unique
  cases Moderation[]
}

enum PunishmentType {
  Warn
}

model Moderation {
  caseId String @id @unique
  createdAt DateTime @default(now())
  duration BigInt?
  guildId String
  guild Guild @relation(fields: [guildId], references: [id])
  moderatorId String @default("934121887829737562") // sentry bot id
  reason String /// @encrypted
  type PunishmentType
}